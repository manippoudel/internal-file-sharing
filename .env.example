# Application Configuration
APP_NAME=Internal File Sharing System
APP_VERSION=1.0.0
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql+asyncpg://fileuser:filepassword@localhost:5432/filedb

# Security Configuration
SECRET_KEY=change-this-to-a-secure-random-secret-key-in-production
ALGORITHM=HS256
SESSION_EXPIRE_MINUTES=30
PASSWORD_MIN_LENGTH=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30

# File Upload Configuration
MAX_UPLOAD_SIZE=10737418240
CHUNK_SIZE=52428800
MAX_CONCURRENT_UPLOADS=3
MAX_CONCURRENT_DOWNLOADS=5

# File Storage Paths
STORAGE_PATH=/data
ACTIVE_FILES_PATH=/data/active
DELETED_FILES_PATH=/data/deleted
TEMP_FILES_PATH=/data/temp
BACKUP_PATH=/data/backups
LOGS_PATH=/data/logs

# Sync Configuration
SYNC_ENABLED=True
RCLONE_CONFIG_PATH=/etc/rclone/rclone.conf
WINDOWS_SERVER_PATH=windows-remote:

# Scheduler Configuration
SCHEDULER_ENABLED=True

# File Retention
DELETED_FILES_RETENTION_DAYS=90

# Pagination
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=100

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Max Users
MAX_CONCURRENT_USERS=15
